<Window x:Class="WindSlicer.Windows.LayoutConfigurationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindSlicer.Windows"
        mc:Ignorable="d"
        Title="LayoutConfigurationWindow" Height="480" Width="640"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Border>
                <Canvas Background="DarkBlue" Width="640" Height="360">
                <Rectangle Fill="Red"
                           Stroke="White"
                           Width="100"
                           Height="100"
                           Canvas.Bottom="0.5"
                           Canvas.Top="0.1"
                           Canvas.Right="0.2"
                           Canvas.Left="0.5"/>
            </Canvas>
        </Border>
    </Grid>
</Window>
